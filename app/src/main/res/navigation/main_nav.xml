<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav"
    app:startDestination="@id/testFragment">

    <fragment
        android:id="@+id/weatherFragment"
        android:name="com.example.weatherlamza.ui.weather.WeatherFragment"
        android:label="WeatherFragment">
        <action
            android:id="@+id/action_weatherFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_weatherFragment_to_searchFragment2"
            app:destination="@id/searchFragment" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.example.weatherlamza.ui.settings.SettingsFragment"
        android:label="SettingsFragment" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.weatherlamza.ui.search.SearchFragment"
        android:label="SearchFragment" />
    <fragment
        android:id="@+id/testFragment"
        android:name="com.example.weatherlamza.ui.TestFragment"
        android:label="TestFragment" />
</navigation>
